{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2019",
        "module": "ES2020",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "types": ["node"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
