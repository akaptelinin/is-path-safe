{
    "name": "is-path-safe",
    "version": "1.0.0",
    "description": "Tiny crossâ€‘platform helper that checks whether a filesystem path is safe to write to.",
    "type": "module",
    "keywords": [
        "path",
        "filesystem",
        "security",
        "windows",
        "unix",
        "cross-platform",
        "safe-path",
        "fs"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/akaptelinin/is-path-safe.git"
    },
    "bugs": {
        "url": "https://github.com/akaptelinin/is-path-safe/issues"
    },
    "homepage": "https://github.com/akaptelinin/is-path-safe#readme",
    "author": "akaptelinin",
    "license": "MIT",
    "contributors": [
        {
            "name": "akaptelinin",
            "url": "https://github.com/akaptelinin"
        }
    ],
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/akaptelinin"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "sideEffects": false,
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "prepare": "husky install",
        "build": "tsc",
        "prettier": "prettier --write .",
        "lint": "eslint . --ext .ts,.js",
        "format": "npm run prettier && npm run lint",
        "test": "vitest run",
        "test:watch": "vitest",
        "prepublishOnly": "npm run build && npm test",
        "release": "npm version patch && npm publish"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^12.0.1",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
